		link(href="bower_components/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
		<% } %>
		link(href="css/main.css", rel="stylesheet")
	body
		h1 Welcome to <%= data.name %> !
		p
		| Project informations:
		span.
			<% print(JSON.stringify(data)); %>
